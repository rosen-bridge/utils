{
  "name": "@rosen-bridge/tokens",
  "version": "0.1.5",
  "description": "this project manage supported tokens",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "prettify": "prettier --write . --ignore-path ./.gitignore",
    "lint": "eslint --fix . && npm run prettify",
    "start": "npm run build && node dist/lib/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "tsc --noEmit && npm run lint && mocha -r ts-node/register 'tests/**/*.ts'",
    "coverage": "c8 npm run test",
    "release": "npm run test && npm run build && npm publish --access public",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@git.ergopool.io:rosen-bridge/tokens.git"
  },
  "files": [
    "dist"
  ],
  "author": "Sahand Zoufan",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.26.0",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [
    "rosen"
  ]
}
