{
  "name": "@rosen-bridge/config",
  "version": "0.2.0",
  "description": "a package to manage configs of rosen bridge projects",
  "repository": "git+https://github.com/rosen-bridge/utils.git",
  "license": "GPL-3.0",
  "author": "Rosen Team",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "coverage": "npm run test -- --coverage",
    "lint": "eslint --fix . && npm run prettify",
    "prettify": "prettier --write . --ignore-path ./.gitignore",
    "release": "npm run build && npm publish --access public",
    "test": "NODE_OPTIONS=--experimental-specifier-resolution=node vitest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/config": "^3.3.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-c8": "^0.26.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "lodash-es": "^4.17.21",
    "memfs": "^4.6.0",
    "prettier": "2.7.1",
    "typescript": "^5.0.0",
    "vitest": "^0.26.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "config": "^3.3.10",
    "js-yaml": "^4.1.0",
    "json-bigint": "^1.0.0",
    "ora": "^8.0.1",
    "yargs": "^17.7.2"
  }
}
