{
  "name": "@rosen-bridge/tss",
  "version": "0.1.0",
  "description": "TypeScript library for building and validating TSS signatures.",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "type": "module",
  "scripts": {
    "prettify": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint --fix . && npm run prettify",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "coverage": "jest --passWithNoTests --coverage",
    "release": "npm run test && npm run build"
  },
  "files": [
    "dist"
  ],
  "author": "Sahand Zoufan",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "@types/secp256k1": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "secp256k1": "^5.0.0",
    "typescript": "^5.0.2"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [
    "rosen"
  ],
  "dependencies": {
    "@rosen-bridge/logger-interface": "^0.1.0"
