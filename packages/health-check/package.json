{
  "name": "@rosen-bridge/health-check",
  "version": "1.0.1",
  "description": "Typescript library to check healthy status of rosen services",
  "author": "Rosen Team",
  "license": "GPL-3.0",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "type": "module",
  "scripts": {
    "prettify": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint --fix . && npm run prettify",
    "build": "tsc --build tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "coverage": "jest --coverage",
    "release": "npm run test && npm run build && npm publish --access public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [
    "rosen"
  ],
  "dependencies": {
    "@cardano-ogmios/client": "^5.6.0",
    "@rosen-bridge/logger-interface": "^0.1.0",
    "@rosen-bridge/scanner": "^2.0.0",
    "@rosen-clients/cardano-koios": "^0.2.0",
    "@rosen-clients/ergo-explorer": "^0.2.0",
    "@rosen-clients/ergo-node": "^0.3.1",
    "lodash": "^4.17.21"
  }
