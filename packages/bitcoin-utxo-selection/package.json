{
  "name": "@rosen-bridge/bitcoin-utxo-selection",
  "version": "0.2.1",
  "description": "Typescript package to select enough Bitcoin utxos for required amount of BTC",
  "repository": "https://github.com/rosen-bridge/utils",
  "license": "GPL-3.0",
  "author": "Rosen Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "coverage": "npm run test -- --coverage",
    "lint": "eslint --fix . && npm run prettify",
    "prettify": "prettier --write . --ignore-path ./.gitignore",
    "release": "npm run build && npm publish --access public",
    "test": "NODE_OPTIONS=--loader=extensionless vitest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.9",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-istanbul": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "extensionless": "^1.9.6",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@rosen-bridge/abstract-logger": "^2.0.0"
  }
}
